<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nanodegree Projects"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:padding="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spotify Streamer"
        android:id="@+id/button"
        android:height="60dp"
        android:width="250dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:background="#ffa426"
        android:padding="0dp"
        android:layout_margin="2dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scores App"
        android:id="@+id/button2"
        android:height="60dp"
        android:width="250dp"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:background="#ffa426"
        android:layout_margin="2dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Library App"
        android:id="@+id/button3"
        android:height="60dp"
        android:width="250dp"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true"
        android:background="#ffa426"
        android:layout_margin="2dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Build It Bigger"
        android:id="@+id/button4"
        android:height="60dp"
        android:width="250dp"
        android:layout_below="@+id/button3"
        android:layout_centerHorizontal="true"
        android:background="#ffa426"
        android:layout_margin="2dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XYZ Reader"
        android:id="@+id/button5"
        android:height="60dp"
        android:width="250dp"
        android:layout_below="@+id/button4"
        android:layout_centerHorizontal="true"
        android:background="#ffa426"
        android:layout_margin="2dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capstone: My App"
        android:id="@+id/button6"
        android:height="60dp"
        android:width="250dp"
        android:layout_below="@+id/button5"
        android:layout_centerHorizontal="true"
        android:background="#ff0b12"
        android:textColor="#ffffff"
        android:layout_margin="2dp" />

</RelativeLayout>
